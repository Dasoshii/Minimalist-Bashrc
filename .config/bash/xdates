#################################################
#  Since festive days changes in every country  #
#  I just added the international basic ones:   #
#   New year's eve, valentine's, BDay & Xmas    #
#################################################

# New year's eve:     JAN 1
# Valentine's:        FEB 14
# BDAY:               CHOOSE
# Xmas:               DEC 23-DEC 26

#Defining some variables
# Format of date [MMDD]
    date=`date +%m%d`
# Checking for cache file, if not then create
cache=~/.config/bash/xdates_cache
    if [[ ! -f $cache ]]; then
        touch $cache && echo 0 > $cache
    fi
    # Related to cache to avoid notification spamming at every terminal open
        cache_cat=`cat $cache`

# Main function
if [ $date -eq 0101 ]; then
    export PS1="ðŸŽŠ \[$(tput setaf 6)\][\u@\h] \[$(tput setaf 3)\][\W]\[$(tput sgr0)\]ðŸŒ  \[$(tput setaf 3)\]$\[$(tput sgr0)\]\[$(tput sgr0)\] "
    if [ $cache_cat -ne 1 ]; then
        notify-send "Happy New Year $USER! ðŸ¥‚ " "Best wishes for this $(date +%Y)"
        echo "1" > $cache
    fi
elif [ $date -eq 0214 ]; then
    export PS1="â¤ï¸ï¸  \[$(tput setaf 5)\][\u@\h] \[$(tput setaf 1)\][\W]\[$(tput sgr0)\]ðŸ’• \[$(tput setaf 1)\]$\[$(tput sgr0)\]\[$(tput sgr0)\] "
    if [ $cache_cat -ne 2 ]; then
        notify-send "Happy valentine's day ðŸ’‹ " "Love it's love and we're all cool ðŸ’‘ðŸ‘¨â€â¤ï¸â€ðŸ‘¨ðŸ‘©â€â¤ï¸â€ðŸ‘©"
        echo "2" > $cache
    fi
