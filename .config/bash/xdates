#         echo "3" > $cache
#     fi
elif [ $date -ge 1223 -a $date -le 1226 ]; then
    export PS1="ðŸŽ„\[$(tput setaf 2)\][\u@\h] \[$(tput setaf 1)\][\W]\[$(tput sgr0)\]â˜ƒ \[$(tput setaf 3)\]$\[$(tput sgr0)\]\[$(tput sgr0)\] "
    if [ $cache_cat -ne 4 ]; then
        notify-send "Merry Christmas $USER! ðŸ¥‚ " "Enjoy this wonderful date, go get some fresh air!"
